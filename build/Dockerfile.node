FROM ghcr.io/sunodo/sunodo-node:pr-198

ARG SNAPSHOT_NAME=shoal
ARG SNAPSHOT_URL=https://github.com/henriquemarlon/shoal/releases/download/v0.1.2-rc/shoal-snapshot.tar.gz

RUN mkdir -p /var/lib/cartesi-rollups-node/snapshots/${SNAPSHOT_NAME}

RUN curl -L ${SNAPSHOT_URL} \
    | tar -xz -C /var/lib/cartesi-rollups-node/snapshots/${SNAPSHOT_NAME}